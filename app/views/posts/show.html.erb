

 <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-color: green;">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1><%= @post.title %></h1>
                        <h2 class="subheading"><%= raw(@post.body).truncate(358) %></h2>
                        <span class="meta">Posted by <a href="#">Start Bootstrap</a> on <%= @post.created_at.strftime("%B %d, %Y")%></span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 fr-view">
 <p>
 	<%= raw(@post.body) %>
 </p>
                </div>
            </div>
        </div>
    </article>

    <hr>
